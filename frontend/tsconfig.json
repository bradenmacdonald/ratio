{
    "compilerOptions": {
        "target": "es6",
        "allowJs": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es5",
            "es2015"
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "**/*-test.*",
        "node_modules"
    ]
}
