- var bodyClasses = [];
block vars
  //- Subtemplates can put code here to define and override vars

doctype html
html
  head
    block title
      title Ratio

    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")

    link(rel="stylesheet", href=`${configPublic.resUrl}/influx.css`)
    link(rel="stylesheet", href=`${configPublic.resUrl}/f/lato/lato.css`)
    link(rel="stylesheet", href=`${configPublic.resUrl}/f/awesome/font-awesome.min.css`)

    //- favicon:

    link(rel="apple-touch-icon", sizes="180x180", href=`${configPublic.resUrl}/i/favicon/apple-touch-icon.png`)
    link(rel="icon" type="image/png" href=`${configPublic.resUrl}/i/favicon/favicon-32x32.png` sizes="32x32")
    link(rel="icon" type="image/png" href=`${configPublic.resUrl}/i/favicon/favicon-16x16.png` sizes="16x16")
    link(rel="manifest" href=`${configPublic.resUrl}/i/favicon/manifest.json`)
    link(rel="mask-icon" href=`${configPublic.resUrl}/i/favicon/safari-pinned-tab.svg` color="#22BDAF")
    link(rel="shortcut icon" href=`${configPublic.resUrl}/i/favicon/favicon.ico`)
    meta(name="apple-mobile-web-app-title" content="Ratio")
    meta(name="application-name" content="Ratio")
    meta(name="theme-color" content="#22BDAF")

    script#configPublic(type="application/json").
      !{JSON.stringify(configPublic)}

    if appData
      script#appData(type="application/json").
        !{JSON.stringify(appData)}

    block head_extra

  body(class=bodyClasses)
    #meta
      block body
